<div class="centerbox">
	<h1>Sign in</h1>
	<div class="row">
		<div class="span6 offset 3">

			<%= form_for(:session, url: sessions_path, class:"form-horizontal") do |f| %>

			<div class="form-group">
				<%= f.label :email, class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :email, type: "email", class: "form-control", placeholder:"email" %>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.label :password, class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :password, type: "password", class: "form-control", placeholder:"email" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Log in", class: "btn btn-default", type: "submit", id: "submit" %>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>
