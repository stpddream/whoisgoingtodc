<h1>All users</h1>
<%= form_tag users_path, method: 'get' do %>
  <p>
  	<%= text_field_tag :search, params[:search] %>
  	<%= submit_tag "Search", name: nil %>
  </p>
<% end %>


<ul class="users">
	<% @users.each do |user| %>
	<li>
		<%= link_to user.name, user %>     <%= user.email %>
	</li>
	<% end %>
</ul>
