
<% if signed_in? %>
<div class = "contentbox">
   <%= render partial: 'shared/user_info', locals: {user: current_user} %>
       
<div class = "feeds" style="height: 25%">


   <%= render partial: 'events/form' %>
</div>
<div class = "feeds" style="height: 70%; margin-top: 30px">

<ul class="nav nav-tabs">
	<li>
		<a href="#friends" data-toggle="tab">Friends</a>
	</li>
	<li>
		<a href="#public" data-toggle="tab">Public</a>
	</li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
	<div class="tab-pane active" id="friends">
		<%= render partial: 'shared/feed', locals: {feed_items: @friend_feed_items } %>
	</div>
	<div class="tab-pane" id="public">
		<%= render partial: 'shared/feed', locals: {feed_items: @public_feed_items } %>
	</div>
</div>
</div>


<% else %>
<div class="row">
	<div class="col-md-4 col-md-offset-1 text-center">
	<span style="color:#fff">FOORIEND<span>
    </div>
	<div class="col-md-4 col-md-offset-1">
		<div class="img-rounded" id="home-right"><%= render 'users/signup' %></div>
	</div>
</div>
<% end %>
