<% if signed_in? %>

<ul class="nav nav-tabs">
  <li><a href="#friends" data-toggle="tab">Friends</a></li>
  <li><a href="#public" data-toggle="tab">Public</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="friends">
  	<%= render partial: 'shared/feed', locals: {feed_items: @friend_feed_items } %>  	
  </div>
  <div class="tab-pane" id="public">
  	<%= render partial: 'shared/feed', locals: {feed_items: @public_feed_items } %>  	
  </div>  
</div>


<div class = "row">
	<aside class = "span4">
		<section> <h1> <%= @current_user.name %> </h1> </section>
		<section> <%= render 'events/form' %> </section>
	</aside>	
</div>

<% else %>
<div class="row">
  <div class="col-md-4 col-md-offset-1 text-center">
    <h1>Who is going to Dining Center?</h1>
    <p>Worry about no accompanies for dinner? Check out your friends here!</p>
    <p><%= link_to "SIGN UP NOW!", signup_path, class: 'btn btn-large btn-primary' %>
  </div>
  <div class="col-md-4 col-md-offset-1"><%= render 'users/signup' %></div>
</div>
<% end %>
