<% else %>
<h1>Sign up</h1>

		<%= render 'shared/error_messages' %>

		<%= form_for @user, class: "form-horizontal" do |f| %>

        <div class="form-group">
		  <%= f.label :email, class: "col-sm-2 control-label" %>	
		  	<div class="col-sm-10">
   		      <%= f.text_field :email, type: "email", class: "form-control", placeholder:"email" %>
   		    </div>
        </div>
        
        <div class="form-group">
		  <%= f.label :name, class: "col-sm-2 control-label" %>	
		  	<div class="col-sm-10">
   		      <%= f.text_field :name, class: "form-control", placeholder:"email" %>
   		    </div>
        </div>
        
        <div class="form-group">
		  <%= f.label :password, class: "col-sm-2 control-label" %>	
		  	<div class="col-sm-10">
   		      <%= f.text_field :password, type: "password", class: "form-control", placeholder:"email" %>
   		    </div>
        </div>
        
        <div class="form-group">
		  <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>	
		  	<div class="col-sm-10">
   		      <%= f.text_field :password_confirmation, type: "password", class: "form-control", placeholder:"email" %>
   		    </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
       	  <%= f.submit "Create my account", class: "btn btn-default", type: "submit", id: "submit" %>
          </div>
        </div>
        <% end %>

				


  <% render "users/signup"%>
<% end %>
